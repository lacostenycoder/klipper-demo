<% for(i=0; i<products.length; i++) { %>
  <% var product = products[i] %>
  <% if(i % 3 == 0) { %>
    <div class="pure-g">
  <% } %>
  <div class="pure-u-1 pure-u-md-1-3" data-index="<%= product.id %>">
    <a href="#" class="product-photo"><img src="<%= product.image.src %>" height="130" alt="<%= prodcut.name.txt %>"/></a>
    <h2><a href="<%= product.link.href %>"> <%= product.name.text %> </a></h2>
    <div class="product-description">
      <div>Price: $<%= product.price.text %></div>
      <button>Buy Now!</button>
    </div>
    <% if(i % 3 == 0) { %>
      </div>
    <% } %>
<% } %>
